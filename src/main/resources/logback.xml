<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/badgers4s.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/badgers4s.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} BADGERS4S [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <include resource="logback-levels.xml" />
    <include resource="logback-${config}.xml" />
</configuration>